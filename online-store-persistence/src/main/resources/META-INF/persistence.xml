<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="by.it" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>by.itacademy.javaenterprise.seledtsova.entity.User</class>
        <class>by.itacademy.javaenterprise.seledtsova.entity.Role</class>
        <class>by.itacademy.javaenterprise.seledtsova.entity.Order</class>
        <class>by.itacademy.javaenterprise.seledtsova.entity.Status</class>
        <class>by.itacademy.javaenterprise.seledtsova.entity.Item</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/online_store?useUnicode=true&amp;characterEncoding=UTF-8"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="postgres"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="format_sql" value="true"/>
          <property name="hibernate.physical_naming_strategy"
                      value="by.itacademy.javaenterprise.seledtsova.naming.CustomPhysicalNamingStrategy"/>
        </properties>
    </persistence-unit>
</persistence>

